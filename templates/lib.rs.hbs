/// Say hello to someone
///
/// # Arguments
///
/// * `name` - The name to greet
///
/// # Returns
///
/// A greeting string
///
/// # Examples
///
/// ```
/// use {{project_name}}::hello;
/// 
/// let result = hello("world");
/// assert_eq!(result, "Hello, world!");
/// ```
pub fn hello(name: &str) -> String {
    format!("Hello, {}!", name)
}

